<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/tbtnSwitch"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:background="@android:color/transparent"
        android:button="@drawable/bluetogglebtn_style"
        android:checked="false"
        android:textOff=""
        android:textOn=""
        android:layout_marginStart="27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        android:text="@string/fandbtn"
        android:layout_alignBottom="@+id/tbtnSwitch"
        android:layout_alignRight="@+id/progressDeterminate"
        android:layout_alignEnd="@+id/progressDeterminate" />
    <com.gc.materialdesign.views.ProgressBarDeterminate
        android:id="@+id/progressDeterminate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E88E5"
        android:layout_alignParentTop="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvDevices"
        android:layout_below="@+id/tbtnSwitch"
        android:layout_toLeftOf="@+id/btnSearch"
        android:layout_toStartOf="@+id/btnSearch" />

</RelativeLayout>
